html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title Node Explorer
    //
       Bootstrap core CSS 
    link(href='css/bootstrap-cosmo.css', rel='stylesheet')
    link(href='css/bootstrap-responsive.css', rel='stylesheet')
    //
       Add custom CSS here 
    link(href='css/simple-sidebar.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    link(href='font-awesome/css/font-awesome.min.css', rel='stylesheet')
  body

    #connectModal.modal.hide.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
      .modal-body
        input.span2#username(type="text", placeholder="username")
        input.span2#password(type="password", placeholder="password")
        input.span2#host(type="text", placeholder="host")
        input.span2#directory(type="text", placeholder="directory")
      .modal-footer
        button#start-sftp.btn.btn-success Connect
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel
        
    #newFileModal.modal.hide.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-body
        input#fileName(placeholder="filename")
      .modal-footer
        button#create-file.btn.btn-primary Create
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel

    #newFolderModal.modal.hide.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-body
        input#folderName(type="text", placeholder="folder name")
      .modal-footer
        button#create-folder.btn.btn-primary Create
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel

    #removeFolderModal.modal.hide.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-body
        div(style='color: black') Delete 
          span#deleteFolderName folder
      .modal-footer
        button#delete-folder.btn.btn-danger Delete
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel

    #removeFileModal.modal.hide.fade(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-body
        div(style='color: black') Delete 
          span#deleteFileName folder
      .modal-footer
        button#delete-file.btn.btn-danger Delete
        button.btn(data-dismiss='modal', aria-hidden='true') Cancel

    div.editor-menu#menu-toggle(style='display:none;')
